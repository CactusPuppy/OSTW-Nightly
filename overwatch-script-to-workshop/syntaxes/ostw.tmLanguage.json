{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Overwatch Script To Workshop",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"name": "keyword.control.ostw",
			"match": "\\b(if|else|while|for|return|in|define|rule|true|false|usevar|method)\\b"
		},
		"strings": {
			"name": "string.quoted.double.ostw",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ostw",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.ostw",
			"begin": "//",
			"end": "$"
		}
	},
	"scopeName": "source.del"
}