rule: "Recursion test."
Event.OngoingPlayer
if (IsButtonHeld(EventPlayer(), Button.Interact))
{
    Test(4);
}

method Test(result) 
{
    if (result < 10)
    {
        SmallMessage(EventPlayer(), <"#<0>", result>);
        define value = Test(result + 1);
        SmallMessage(EventPlayer(), <"rank: <0>", value>);
        return value;
    }
    else
    {
        SmallMessage(EventPlayer(), <"max!: <0>", result>);
        return result;
    }
}