rule: "Recursive Test"
Event.OngoingPlayer
if (IsButtonHeld(EventPlayer(), Button.Interact))
{
    Count(3);
}

recursive method Count(num)
{
    MinWait();
    SmallMessage(EventPlayer(), <"forward: <0>", num>);
    MinWait();
    if (num < 10)
        Count(num + 1);
    MinWait();
    SmallMessage(EventPlayer(), <"backward: <0>", num>);
    MinWait();
}