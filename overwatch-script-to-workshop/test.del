usevar globalvar A;
usevar playervar A;

define globalvar temp C;

rule: "Resursion test."
if (IsButtonHeld(EventPlayer(), Button.Interact))
{
    GenerateGrid(PositionOf(EventPlayer()));
}

method GenerateGrid(location)
{
    for (define x = 0; x < 10; x+=1;)
        for (define y = 0; y < 10; y+=1;)
        {
            define local = location + Vector(x, y, ZOf(location));
            CreateEffect(AllPlayers(), Effects.Sphere, Color.White, local, 0.1, EffectRev.None);
        }
}