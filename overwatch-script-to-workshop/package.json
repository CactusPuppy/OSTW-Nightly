{
    "name": "overwatch-script-to-workshop",
    "displayName": "Overwatch Script To Workshop",
    "description": "Autocomplete and syntax highlighting for Overwatch Script To Workshop",
    "version": "1.0.0",
    "publisher": "Deltin",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ostw"
    ],
    "main": "./dist/extension",
    "contributes": {
        "languages": [
            {
                "id": "ostw",
                "aliases": [
                    "Overwatch Script To Workshop",
                    "ostw"
                ],
                "extensions": [
                    ".del",
                    ".ostw",
                    ".workshop"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ostw",
                "scopeName": "source.del",
                "path": "./syntaxes/ostw.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ostw",
            "properties": {
                "ostw.outputLanguage": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "English",
                        "German",
                        "Spanish (Castilian)",
                        "Spanish (Mexico)",
                        "French",
                        "Italian",
                        "Japanese",
                        "Korean",
                        "Polish",
                        "Portuguese",
                        "Russian",
                        "Chinese (S)",
                        "Chinese (T)"
                    ],
                    "default": "English",
                    "description": "The output language of the OSTW output."
                },
                "ostw.optimizeOutput": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "description": "Determines if the workshop output will be optimized."
                },
                "ostw.deltintegerPath": {
                    "scope": "machine",
                    "type": "string",
                    "description": "The path to Deltinteger.exe."
                },
                "ostw.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "commands": [
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && webpack --mode production",
        "compile": "tsc -b && webpack --mode development",
        "watch": "tsc -b -w",
        "postinstall": "npm install",
        "test": "sh ./scripts/e2e.sh",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.10.52",
        "ts-loader": "^6.2.1",
        "tslint": "^5.19.0",
        "typescript": "^3.5.3",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "async": "^3.1.0",
        "request": "^2.88.0",
        "vscode-languageclient": "^5.2.1"
    }
}
